<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogSystem.styles.css" asp-append-version="true" />
    <style>
        .navbar-nav .nav-link:hover {
            color: #ffd700 !important;
            text-shadow: 0 0 5px rgba(255, 255, 255, 0.6);
            transition: all 0.2s ease-in-out;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm" style="background: linear-gradient(to right, #1d2b64, #f8cdda);">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Posts" asp-action="Index">
                    <img src="~/images/dogus-logo.png" alt="Logo" style="height:40px; margin-right:10px;" />
                    <span class="fw-bold text-white text-uppercase">Doğuş Teknoloji</span>
                </a>

                <span class="navbar-text mx-auto text-white fw-semibold fs-5 d-none d-md-block">
                    Doğuş Teknoloji Blog Sistemi
                </span>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Posts" asp-action="Index">Bloglar</a>
                        </li>
                        

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/Account/Profile">Profilim</a>
                            </li>


                            @if (ViewBag.IsAdmin == true)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-warning" href="/Admin/Index">Admin Paneli</a>
                                </li>
                            }

                            <li class="nav-item">
                                <span class="nav-link text-success">Merhaba, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Giriş</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - BlogSystem - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
