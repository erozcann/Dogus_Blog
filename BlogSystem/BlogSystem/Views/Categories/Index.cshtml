@model List<BlogSystem.Models.Category>

@{
    ViewData["Title"] = "Kategori Yönetimi";
}

<h2>Kategori Yönetimi</h2>

<a class="btn btn-success mb-3" asp-action="Create">+ Yeni Kategori</a>

@if (!Model.Any())
{
    <div class="alert alert-warning">Henüz kategori bulunmamaktadır.</div>
}
else
{
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Adı</th>
                <th style="width:200px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@category.Id">Düzenle</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@category.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
